WindowManager:
    Start_Window:
    Window_DateInfo:
    My_Filechooser:
    Add_Exif:
    Window_SortDate:
    Search_Date:
    Last_Screen:
    


<Start_Window>:
    name: "start"
    
    GridLayout:
        rows: 2
        size: root.width, root.height
        padding: [150, 75, 150, 50]
        spacing: [50,50]
        
        Label:
            text: "Wanna tidy up your photos? "
            color: [0,0,0,0.9]
            font_size: "20sp"
        
        GridLayout:
            cols: 1
            padding: [50, 20]
            spacing: [20,20]
            row_default_height: "50dp"
            row_force_default: True
            size_hint_y: None
            height: self.minimum_height   
            
            RoundedButton:
                text:"Select Photos"
                back_color: (0.157, 0.455, 0.753, 1.0)
                on_release:
                    root.set_desktop()
                    app.root.current = "dateinfo"
                    root.manager.transition.direction = "left"
        
            

            
            
<Window_DateInfo>:
    name: "dateinfo"
   
    GridLayout:
        rows: 2 
        size: root.width, root.height
        padding: [50, 50]
        spacing: [20,20]
        
        GridLayout:
            cols: 3
            size: root.width, root.height
            padding: [30, 30]
            spacing: [20,20]
            
            Label:
                text: "Which photos do \nyou like to sort?"
                color: [0,0,0,1]
              
            RoundedButton:
                text: "Choose Folder"
                back_color: (0.424, 0.478, 0.537, 1)
                border_radius: [10]
                on_release:
                    root.set_pathtype("origin")
                    app.root.current = "my_filechooser"
                    root.manager.transition.direction = "left"
                    
            Label: 
                id: l_date_origin_filepath
                color: [0,0,0,1]
                text: ""
                text_size: self.size
                halign: 'right'
                valign: 'middle'
                shorten: True
                
            Label:
                text: "Where do you want to \nstore your photos?"
                color: [0,0,0,1]
            RoundedButton:
                text: "Choose Folder"
                back_color: (0.424, 0.478, 0.537, 1)
                border_radius: [10]
                on_release:
                    root.set_pathtype("destination")
                    app.root.current = "my_filechooser"
                    root.manager.transition.direction = "left"
                
            Label: 
                id: l_date_dest_filepath
                color: [0,0,0,1]
                text: ""
                text_size: self.size
                halign: 'right'
                valign: 'middle'
                shorten: True
     

        GridLayout:
        
            cols: 2
            padding: [40, 40]
            spacing: [20,20]
            row_default_height: "50dp"
            row_force_default: True
            size_hint_y: None
            height: self.minimum_height
            
            RoundedButton:
                text: "Analyze Photos"
                back_color: (0.157, 0.455, 0.753, 1.0)
                on_press:
                    self.back_color = (0.157, 0.455, 0.753, 0.7)
                    self.text = "Analyzing ..."
                on_release:
                    self.back_color = (0.157, 0.455, 0.753, 1.0)
                    self.text = "Analyze Photos"
                    root.manager.transition.direction = "left"    
                    root.check_path()
                    
            RoundedButton:
                text: "Go Back"
                back_color: (0.157, 0.455, 0.753, 1.0)
                on_release:
                    app.root.current = "start"
                    root.manager.transition.direction = "right"
        
        
        
        
<My_Filechooser>:
    id: my_filechooser
    name:  "my_filechooser"
    canvas.before:
        Color:
            rgb: 112/255, 128/255, 144/255
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows: 2
        size: root.width, root.height
        padding: [20, 20]
        spacing: [20,20]
        color: (.5, .4, .5, 1)
        
        
        FileChooserIconView:
            id: filechooser
            dirselect: True
        
        GridLayout:
            cols: 2
            padding: [40, 40]
            spacing: [20,20]
            row_default_height: "40dp"
            row_force_default: True
            size_hint_y: None
            height: self.minimum_height
            
            RoundedButton:
                back_color: (0.157, 0.455, 0.753, 1.0)
                text: "Open"
                on_release: 
                    my_filechooser.open(filechooser.path)
                    app.root.current = "dateinfo"
                    root.manager.transition.direction = "right"

            RoundedButton:
                text: "Close"
                back_color: (0.157, 0.455, 0.753, 1.0)
                on_release:
                    app.root.current = "dateinfo"
                    root.manager.transition.direction = "right"
<Add_Exif>:
    name: "addexif"
    GridLayout:
        rows: 4
        size: root.width, root.height
        padding: [30, 10]
        spacing: [20,20]
        
        GridLayout:       
            cols: 1
            padding: [40, 10]
            spacing: [10,10]
            row_default_height: "20dp"
            row_force_default: True
            size_hint_y: None
            height: self.minimum_height
            
            Label:                
                id: estimated_date
                text: "Click 'Load Photos' to start the Process."
                color: [0,0,0,0.9]
                font_size: "16sp"
            
        Image:
            id: image_exif
            source: 'images/exif_picture.png'
            size_hint_x: 0.8
            allow_stretch: True
        
        GridLayout:       
            cols: 6
            padding: [80, 10]
            spacing: [10,10]
            row_default_height: "40dp"
            row_force_default: True
            size_hint_y: None
            height: self.minimum_height
            
            Label:
                text: "Year:"
                color: [0,0,0,1]
                padding_y: 8
            TextInput:
                id: year
                multiline: False
                text: ""
                size_hint: [None,None]
                height: self.minimum_height
                width: 60
                focus: True
                padding: 8
            Label:
                text: "Month:"
                color: [0,0,0,1]
                padding_y: 8
            TextInput:
                id: month
                multiline: False
                text: ""
                size_hint: [None,None]
                height: self.minimum_height
                width: 40
                padding: 8
            Label:
                text: "Day:"
                color: [0,0,0,1]
                padding_y: 8
            TextInput:
                id: day
                multiline: False
                text: ""
                size_hint: [None,None]
                height: self.minimum_height
                width: 40
                padding: 8
        
        GridLayout:
            cols: 3
            padding: [40, 0 , 40 ,20]
            spacing: [20,10]
            row_default_height: "50dp"
            row_force_default: True
            size_hint_y: None
            height: self.minimum_height
            
            RoundedButton:
                text: "Load Photos"
                back_color: (0.157, 0.455, 0.753, 1.0)
                on_press:
                    self.text = "Next"
                    self.back_color = (0.157, 0.455, 0.753, 0.8)
                on_release:
                    root.get_datelist()
                    root.next_image()
                    self.back_color = (0.157, 0.455, 0.753, 1)
                    
            RoundedButton:
                text: "Save Date"
                back_color: (0.157, 0.455, 0.753, 1.0)
                on_press:
                    self.back_color = (0.157, 0.455, 0.753, 0.8)
                on_release:
                    root.set_exif(year.text, month.text, day.text)
                    self.back_color = (0.157, 0.455, 0.753, 1)

            RoundedButton:
                text: "Go Back"
                back_color: (0.157, 0.455, 0.753, 1.0)
                on_release:
                    root.reset_exif()
                    root.reset_count()
                    app.root.current = "dateinfo"
                    root.manager.transition.direction = "right"
    
        
<Window_SortDate>:
    name: "sortdate"
    GridLayout:
        rows: 4
        size: root.width, root.height
        padding: [20, 20, 20, 0]
        spacing: [20,20]

        GridLayout:
            cols: 2
            size: root.width, root.height
            padding: [30, 10]
            spacing: [20,20]
            Label:
                text: "Images found:"
                color: [0,0,0,1]                    
            Label: 
                id: l_date_num_images
                color: [0,0,0,1]
                text : ""
                
            Label:
                text: "Images without exact date:"
                color: [0,0,0,1]
            Label: 
                id: l_date_num_noexif
                color: [0,0,0,1]
                text: ""
                
            Label:
                text: "Images without location"
                color: [0,0,0,1]
            Label: 
                id: l_date_num_noloc
                color: [0,0,0,1]
                text: ""    
                
            Label:
                text: "Videos found:"
                color: [0,0,0,1]
            Label: 
                id: l_date_num_videos
                color: [0,0,0,1]
                text: ""
    
            Label:
                text: "memory in MB:"
                color: [0,0,0,1]
            Label: 
                id: l_date_num_memory
                color: [0,0,0,1]
                text: ""              
                
        GridLayout:
            cols: 1
            padding: [200, 0]
            spacing: [20,10]
            row_default_height: "30dp"
            row_force_default: True
            size_hint_y: None
            height: self.minimum_height
            color: (0.157, 0.455, 0.753, 1)   
            
            RoundedButton:
                text: "Add Info"
                back_color: (0.424, 0.478, 0.537, 1)
                border_radius: [10]    
                on_release:
                    app.root.current = "addexif"
                    root.manager.transition.direction = "left"
        
        Label:
            canvas.before:
                Color: 
                    rgba: (0,0,0,0.5)
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: None
            height: 1
        
        GridLayout:
            cols: 2
            padding: [40, 0 , 40 , 40]
            spacing: [20,20]
            row_default_height: "50dp"
            row_force_default: True
            size_hint_y: None
            height: self.minimum_height
            
            RoundedButton:
                text: "Sort by Date"
                back_color: (0.157, 0.455, 0.753, 1.0)
                on_press:
                    self.back_color = (0.157, 0.455, 0.753, 0.7)
                    self.text = "Sorting ..."
                on_release:
                    root.date_startsort()
                    app.root.current = "last_screen"
                    root.manager.transition.direction = "left"    

            RoundedButton:
                text: "Search by Date"
                back_color: (0.157, 0.455, 0.753, 1.0)
                on_release:
                    app.root.current = "searchdate"
                    root.manager.transition.direction = "left"
                    
            RoundedButton:
                text: "Sort by Location"
                back_color: (0.157, 0.455, 0.753, 1.0)
                on_press:
                    self.back_color = (0.157, 0.455, 0.753, 0.7)
                    self.text = "Sorting ..."
                on_release:
                    root.location_startsort()
                    app.root.current = "last_screen"
                    root.manager.transition.direction = "left"  
                    back_color: (0.157, 0.455, 0.753, 1.0)

            RoundedButton:
                text: "Go Back"
                back_color: (0.157, 0.455, 0.753, 1.0)
                on_release:
                    root.reset_count()
                    app.root.current = "dateinfo"
                    root.manager.transition.direction = "right"

<Search_Date>:
    name: "searchdate"
    GridLayout:
        rows: 2
        size: root.width, root.height
        padding: [30, 30]
        spacing: [20,20]
        
        FloatLayout:       
            size: root.width, root.height/2
            Label:
                text: "Start-Date:"
                color: [0,0,0,1]
                size_hint: 0.3, 0.15
                pos_hint: {'x': 0.2, 'top':.7}
                padding_y: 8
            TextInput:
                id: startdate
                multiline: False
                text: "  YYYY-MM-DD"
                size_hint: [None,None]
                height: self.minimum_height
                width: 120
                focus: True
                padding: 8
                pos_hint: {'x': .6, 'top':.7}
            Label:
                text: "End-Date:"
                color: [0,0,0,1]
                size_hint: 0.3, 0.15
                pos_hint: {'x': 0.2 , 'top':.45}
                padding_y: 8
            TextInput:
                id: enddate
                multiline: False
                text: "  YYYY-MM-DD"
                size_hint: [None,None]
                height: self.minimum_height
                width: 120
                padding: 8
                pos_hint: {'x': .6, 'top':.45}
        
        GridLayout:
            cols: 2
            padding: [40, 40]
            spacing: [20,20]
            row_default_height: "50dp"
            row_force_default: True
            size_hint_y: None
            height: self.minimum_height
            
            RoundedButton:
                text: "Search and Copy"
                back_color: (0.157, 0.455, 0.753, 1.0)
                on_press:
                    self.back_color = (0.157, 0.455, 0.753, 0.7)
                    self.text = "Searching ..."
                on_release:
                    self.text = "Search and Copy"
                    self.back_color = (0.157, 0.455, 0.753, 1)
                    root.manager.transition.direction = "left"
                    root.search_date(startdate.text,enddate.text)
                        

            RoundedButton:
                text: "Go Back"
                back_color: (0.157, 0.455, 0.753, 1.0)
                on_release:
                    app.root.current = "sortdate"
                    root.manager.transition.direction = "right"           
                    
                    

<Last_Screen>:
    name: "last_screen"
    GridLayout:
        rows: 3
        size: root.width, root.height
        padding: [150, 20]
        spacing: [20,30]
        
        Label:
            text: "Copying your photos was succesful!"
            color: [0,0,0,1]
            font_size: "20sp"
        
        Image:
            source: 'images/copy_icon.png'
            size: self.texture_size
            
        GridLayout:
            cols: 1
            padding: [50, 30]
            spacing: [20,20]
            row_default_height: "50dp"
            row_force_default: True
            size_hint_y: None
            height: self.minimum_height   
            
            RoundedButton:
                text: "Go Back to Start"
                back_color: (0.157, 0.455, 0.753, 1.0)
                on_release:
                    root.reset_count()
                    app.root.current = "start"
                    root.manager.transition.direction = "right"


<RoundedButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (1,0,1,1)
    border_radius: [23]
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size:self.size
            pos: self.pos
            radius: self.border_radius        
